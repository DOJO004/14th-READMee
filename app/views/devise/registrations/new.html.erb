<div >
<p class="text-2xl" >註冊</p>
</div>

<div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, '信箱' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '123@gmail.com' %>
  </div>

  <div class="field">
    <%= f.label :password, '密碼' %> <br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入密碼，最少 #{@minimum_password_length} 字" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '確認密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "送出",data:{turbo: false}, class:  %>
  </div>
<% end %>
</div>
