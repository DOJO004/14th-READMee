<section class="flex justify-center w-full">

  <div class="block w-1/3 px-3 py-2 mt-2 border border-gray-200 rounded-md shadow outline-none">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-2">
      <%= f.label :email, '信箱', class:'font-bold text-xl'  %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '123@gmail.com', class:"input" %>
    </div>

    <div class="mt-2">
      <%= f.label :password, '密碼', class:'font-bold text-xl' %> 
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入#{@minimum_password_length}位數密碼", class:"input" %>
    </div>

    <div class="mt-2">
      <%= f.label :password_confirmation, '確認密碼', class:'font-bold text-xl' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="mt-2">
      <%= f.submit "送出",data:{turbo: false}, class: "save-btn"%>
    </div>
  <% end %>
  </div>

</section>


