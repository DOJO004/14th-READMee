<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <div class="flex">
    <%= form.text_field :tag, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
    <%= form.button 'x', { data: { action: "nested-form#remove" }, class: "rounded-lg ml-2 px-2 bg-amber-500 text-white inline-block font-medium cursor-pointer"} %>
  </div>
  <%= form.hidden_field :_destroy %>
</div>