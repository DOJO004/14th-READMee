<div class="flex items-center gap-5 mt-10" >
  <h2 class="text-2xl font-bold ">文章列表</h2>    
  <%= link_to "新增文章",new_article_path, class: "rounded-lg py-1 px-5 text-white bg-amber-500 hover:bg-amber-800" %>
</div>

<section class= "flex justify-between">
  <ul>
    <% @articles.each do |article| %>
    <li class="mt-12">
    
    <%= link_to article.title.truncate(15), article_path(article.id), class:"hover:border-b-4 hover:ease-in hover:duration-100 border-amber-400 text-xl font-medium" %>
    <div class="flex gap-4 mt-1">
      <% if current_user.id == article.user.id %>
      <%= link_to "更新", edit_article_path(article.id)%>
      <% end %>
      <% if current_user.id == article.user.id %>
      <%= link_to "刪除", article_path(article.id), 
                                  data: {
                                    turbo_method: "delete",
                                    turbo_confirm: "確定要刪除?"
                                  }%>    
      <% end %>                        
    </div>
    </li>
    <% end %>  
  </ul>
    
  <div class="img-container">
    <%= image_tag 'network.jpg',class:"article-img" %>
  </div>
</section>