<div id="content" data-controller="resume">
  <section class="relative flex justify-between w-full pl-16">  
      <div class="max-w-screen-lg p-16 mt-20 mb-16 bg-white shadow-2xl min-h-1000">
        <%= form_with(url: resume_path(account: current_user.account, id: @resume.id), method: "patch", model: @resume, data: { turbo: false }) do |f| %>
          <%= f.submit "更新", class: "absolute top-4 right-72 inline-block px-5 py-3 mx-auto text-center text-white rounded-lg cursor-pointer bg-amber-500 hover:bg-amber-800" %>
          <div class="flex h-64">
            <div class="flex flex-col align-center">
              <div class="flex items-center justify-center inline-block pb-5 custom-width-250px">
                <%= image_tag "defaultuser.png", class: "inline-block w-32 h-32 rounded-full" %>                
              </div>
              <div class="flex items-center inline-block w-60" data-resume-target="basicInfo">
                <%= f.text_area :basic_info, class: "border-0 w-full h-20 p-2 border rounded-md resize-y h-20" %>
              </div>
            </div>
            <div class="flex-grow pt-5l">
              <%= f.text_area :about_me, data: {
                                                resume_target: 'aboutMeForm',
                                                action: 'input->inputAboutMeTextareaHeight'
                                              },
                class: "h-full border-0 w-full h-20 p-2 border rounded-md resize-y" %>
            </div>
          </div>
          <div class="flex justify-between">
            <div class="w-1/2 pl-1 pt-5l">
              <h1 class="py-3 text-xl font-bold">技能</h1>
              <ul class="relative">
                <% if @skills.present? %>
                  <% @skills.each do |skill| %>
                    <li class="inline-blockrounded-lg">-<%= skill %></li>
                  <% end %>
                <% else %>
                  <li class="inline-block rounded-lg">-請輸入技能</li>
                <% end %>
              </ul>
            </div>
            <div class="w-1/2 pl-1 pt-5l">
              <h1 class="py-3 text-xl font-bold">語言</h1>
              <ul class="relative">
                <% if @resume.languages.present? %>
                  <% @languages.each do |language, level| %>
                    <li class="inline-blockrounded-lg">-<%= language %>▪️<%= level %></li>
                  <% end %>
                <% else %>
                  <li class="inline-block rounded-lg">-請輸入語言</li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="pt-5l" data-resume-target="workExperience">
            <%= f.text_field :work_experience_title, class: "my-2 border-0 w-full h-10 h-20 p-2 border rounded-md resize-y" %>
            <%= f.text_area :work_experience, data: {
                                                resume_target: 'workExperienceForm',
                                                action: 'input->inputWorkExperienceTextareaHeight'
                                              }, 
            class: "border-0 w-full h-20 p-2 border rounded-md resize-y" %>
          </div>
          <%= f.text_field :project_title, class: "my-2 border-0 w-full h-10 h-20 p-2 border rounded-md resize-y" %>
          <div class="flex h-60">
            <img class="w-1/2" src="https://picsum.photos/300/200/?random=10">
            <div class="w-1/2 pt-5l" data-resume-target="workExperience">
              <%= f.text_area :project, data: {
                                                  
                                                }, 
              class: "border-0 w-full h-full h-20 p-2 border rounded-md resize-y" %>
            </div>
          </div>
          <div class="pt-5l" data-resume-target="workExperience">
            <%= f.text_field :education_title, class: "my-2 border-0 w-full h-10 h-20 p-2 border rounded-md resize-y" %>
            <%= f.text_area :education, data: {
                                                resume_target: 'workExperienceForm',
                                                action: 'input->inputWorkExperienceTextareaHeight'
                                              }, 
            class: "border-0 w-full h-20 p-2 border rounded-md resize-y" %>
          </div>
      <% end %>
    </div>
  </section>
  <div class="fixed bottom-0 right-0 bg-gray-200 top-68px">
    <div class="flex-col justify-between h-full overflow-y-scroll align-center">
      <div class="px-10 pt-10 custom-width-250px">
        <p>組件一</p>
        <p>組件二</p>
        <p>組件三</p>
        <p>組件四</p>
      </div>
    </div>
  </div>
</div>