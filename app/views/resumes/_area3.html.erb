          <%= f.text_field :project_name_1, class: "w-full py-1 px-2 rounded-md resize-y border-0 border-white", placeholder: "專案名稱1號" %>
        </div>
        <div>
          <%= f.text_area :project_content_1, class: "p-2 grow w-full mt-1 py-1 rounded-md resize-y border-0 border-white  ", placeholder: "專案內容1號" %>
        </div>
      </div>
      <div class="w-1/2">
        <div>
          <img src="https://picsum.photos/480/200/?random=10">
        </div>
        <div>
          <%= f.text_field :project_name_2, class: "w-full py-1 px-2 rounded-md resize-y border-0 border-white", placeholder: "專案名稱1號" %>
        </div>
        <div>
          <%= f.text_area :project_content_2, class: "p-2 grow w-full mt-1 py-1 rounded-md resize-y border-0 border-white  ", placeholder: "專案內容1號" %>
        </div>
      </div>
    </div>
  </div>
  
  <% elsif @resume.area_3 == 3 %>

    <div class="mt-2">
      <div class="flex h-60">
        <div class="flex flex-col w-1/2">
          <%= f.text_field :project_name_1, class: "font-bold w-full py-1 px-2 rounded-md resize-y border-0 border-white" %>
          <%= f.text_area :project_content_1, class: "p-2 grow w-full mt-1 py-1 rounded-md resize-y border-0 border-white" %>
        </div>
        <%= image_tag "pdf-project.jpg", class:"w-1/2" %>

      </div>
    </div>
  
  <% end %>
</div>