    <div>
      <%= f.text_field :project_title, class: "border-0 border-white text-lg font-bold rounded-md mb-2 w-full py-1" %>
    </div>
    <div class="flex">
      <div class="w-1/2 pr-2">
        <div>
          <img src="https://picsum.photos/480/200/?random=10">
