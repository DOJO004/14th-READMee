          <% else %>
            <% if @resume.profile.work_experiences.second.present? %>
              <p><%= @resume.work_exp_end_date_2 %></p>
            <% else %>
              <p><%= @resume.work_exp_end_date_2 %></p>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if @resume.work_exp_name_2.present? %>
        <p class="font-semibold text-left"><%= @resume.work_exp_name_2 %></p>
      <% else %>
        <% if @resume.profile.work_experiences.second.present? %>
          <p class="font-semibold text-left"><%= @resume.work_exp_name_2 %></p>
        <% else %>
          <p class="font-semibold text-left"><%= @resume.work_exp_name_2 %></p>
        <% end %>
      <% end %>

      <p class="mt-3 text-justify min-h-min"><%= @resume.work_exp_content_2 %></p>
    </div>

