        <div class="flex items-center gap-2 mr-16">
          <% if @resume.work_exp_start_date_2.present? %>
            <p class="text-left "><%= @resume.work_exp_start_date_2 %></p><span>~</span>
          <% else %>
            <% if @resume.profile.work_experiences.second.present? %>
              <p class="text-left "><%= @resume.work_exp_start_date_2 %></p><span>~</span>
            <% else %>
              <p class="text-left "><%= @resume.work_exp_start_date_2 %></p>
            <% end %>
          <% end %>

          <% if @resume.work_exp_end_date_2.present? %>
