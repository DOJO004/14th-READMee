<section class="flex justify-center w-full">
  <div data-controller="pdfGenerate" data-pdfGenerate-target="pdfContent" class="max-w-screen-lg p-16 mt-20 bg-white shadow-2xl">
    <div class="flex items-end min-h-min">
      <div class="flex flex-col">
<% if @resume.area_1 == 1 %>

  <div class="lg:flex min-h-min ">
    <div >
      <div class="flex items-center justify-center pb-5 custom-width-250px">
      <%= display_avatar_base64(@resume.profile) %>
      </div>
      <div class="items-center justify-center md:inline-block md:flex md:flex-col lg:w-60">

        <p class="px-2 py-1 font-bold text-center "><%= @resume.profile.full_name%></p>
        <p class="px-2 py-1 font-bold text-center "><%= @resume.profile.job_hunting %></p>
        <p class="px-2 py-1 font-bold text-center "><%= @resume.profile.phone %></p>


      </div>

      <div class="text-center">
        <h1 class="font-bold">語言</h1>
        <div class="flex flex-col">

        <% if @resume.profile.languages.present? %>
          <ul data-profileInfo-target="languages" class="text-gray-700 ">
            <% @resume.profile.languages.each do |language, level| %>
              <li><%= "#{language} • #{level}" %></li>
            <% end %>
          </ul>
        <% end %>
        </div>
      </div>
      <div class="flex flex-col items-center">
        <h2 class="font-bold">技能</h2>
        <ul data-profileInfo-target="skills" class="text-center text-gray-700">
          <% @resume.profile.skills.each do |skill| %>
            <li class="block"><%= skill.tag %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div>
      <h1 class="mb-5 text-xl font-black">簡介</h1>
      <p class="min-h-min"><%= @resume.about_me %></p>
      <div class="mt-3">
        <% if @resume.social_links.present? %>
          <span ><%= @resume.social_links %></span>
        <% else %>
          <% if @resume.profile.social_links.first.present? %>
            <span ><%= @resume.social_links %></span>
            <span ><%= @resume.social_links %></span>
          <% else %>
            <span ><%= @resume.social_links %></span>
          <% end %>
        <% end %>
      </div>
    </div>



  </div>

<% else @resume.area_1 == 3 %>

  <div>
    <div class="mx-auto min-h-min">
      <div>
        <div class="flex flex-col items-center justify-center gap-1 ">
          <div class="flex items-center justify-center">
            <%= display_avatar_base64(@resume.profile) %>
          </div>
          <p class="font-bold text-center"><%= @resume.profile.full_name %></p>
          <p class="text-center "><%= @resume.profile.job_hunting %></p>
          <p class="text-center "><%= @resume.profile.phone %></p>
          <p class="text-center "><%= @resume.profile.address %></p>
          <% if @resume.social_links.present? %>
            <span class="mb-2"><%= @resume.social_links %></span>
          <% else %>
            <% if @resume.profile.social_links.first.present? %>
            <span class="mb-2"><%= @resume.social_links %></span>
            <% else %>
            <span class="mb-2"><%= @resume.social_links %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="flex flex-col w-full">
      <p class="px-3 text-justify min-h-min"><%= @resume.about_me %></p>
    </div>



    <div class="flex">
      <div class="w-1/2 text-center">
        <h3 class="text-lg font-bold">語言</h3>
        <% if @resume.profile.languages.present? %>
          <ul data-profileInfo-target="languages" class="mt-2 text-gray-700">
            <% @resume.profile.languages.each do |language, level| %>
              <li><%= "#{language} • #{level}" %></li>
            <% end %>
          </ul>
      <% end %>
      </div>
      <div class="w-1/2 text-center">
        <h3 class="text-lg font-bold ">技能</h3>
        <ul data-profileInfo-target="skills" class="mt-2 text-gray-700">
          <% @resume.profile.skills.each do |skill| %>
            <li class="block mr-2"><%= skill.tag %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
