<turbo-frame id="edit_project">
  <%= form_with url: project_path, model: @project, data:{turbo_method: :patch} do |form| %>
    <div>
      <%= form.label :title, "名稱" %>
      <%= form.text_field :title, name:"projects[title]" %>
    </div>
    <div>
      <%= form.label :use_skill, "使用技術" %>
      <%= form.text_field :use_skill, name:"projects[use_skill]" %>
    </div>
    <div>
      <%= form.label :content, "簡介" %>
      <%= form.text_area :content, name:"projects[content]"%>
    </div>
    <%= form.submit "送出", class: "save-btn" %>
  <% end %>
</turbo-frame>
