<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">

  <div class="grid gap-12 md:grid-cols-3">
    <div class="col-span-2">
      <h2 class="text-3xl font-bold text-gray-800 lg:text-4xl dark:text-white">
        <%= @job.title %>
      </h2>
      <div class="flex">
        <div class="px-2 py-5">
          <img src="https://picsum.photos/200/100/?random=10">
        </div>
        <div class="px-2 py-5">
          <img src="https://picsum.photos/200/100/?random=10">
        </div>
      </div>
      <p class="mt-3 text-gray-800 dark:text-gray-400">
        <p>職缺內容</p>
        <div class="whitespace-pre-line">
          <%= @job.content %>
        </div>
      </p>
    </div>

    <div class="space-y-6 lg:space-y-4">
      <div class="flex">
        <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>          
        </span>
        <div class="ml-5 sm:ml-8">
          <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
            需求人數: <%= @job.num_of_people %> 人
          </h3>
        </div>
      </div>
      
      <div class="flex">
        <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
          </svg>          
        </span>
        <div class="ml-5 sm:ml-8">
          <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
            年資: <%= @job.seniority %>
          </h3>
        </div>
      </div>
      
      <div class="flex">
        <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>          
        </span>
        <div class="ml-5 sm:ml-8">
          <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
            薪水: <%= @job.salary %>
          </h3>
        </div>
      </div>
      
      <div class="flex">
        <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>          
        </span>
        <div class="ml-5 sm:ml-8">
          <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
            地址: <%= @job.company.address %>
          </h3>
        </div>
      </div>
      <a href="#" class="inline-flex items-center justify-center block gap-2 px-4 py-3 text-sm font-semibold text-white transition-all border border-transparent rounded-md bg-amber-500 hover:text-white hover:bg-amber-600 focus:outline-none focus:ring-2 ring-offset-white focus:ring-blue-500 focus:ring-offset-2">
        馬上應徵
      </a>
    </div>
  </div>
</div>