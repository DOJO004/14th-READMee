
<% @job_matchings.each do |matching| %>
  <div class="w-9/12 mx-auto m-28"> 
      <ul class="justify-between p-5 m-2 leading-6 ">
        <div>
          <li class="border shadow-lg md:flex">
            <div class="p-6">
              <img src="https://picsum.photos/100/100/?random=10">
            </div>
            <div class="p-2 md:w-2/3 ">    
              <div class="mt-2 ">
                <%= link_to "#{matching.company.name}", company_show_path(matching.company.id), class: "font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500" %>
                <%= matching.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d %I:%M %p") %>
              </div>
              <div class="mt-2">
                <%= link_to job_show_path(matching.job.id) do %>
                  <%= truncate(matching.job.content, length: 200) %>
                <% end %>
              </div>
            </div>
            <div class="p-2 md:w-1/3">
              <div>需求人數: <%= matching.job.num_of_people %></div>
              <div>年資: <%= matching.job.seniority %></div>
              <div>薪水: <%= matching.job.salary %></div>
              <div>地址: <%= matching.company.address %></div>
            </div>
          </li>
        </div>
      </ul>
  </div>
<% end %>