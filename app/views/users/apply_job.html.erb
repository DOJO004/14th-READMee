<% @job_matchings.each do |matching| %>
  <div class="w-9/12 m-10 mx-auto"> 
    <ul class="justify-between p-5 m-2 leading-6">
      <div>
        <li class="border shadow-lg md:flex">
          <div class="p-6">
            <%= image_tag("Read.png", class: "rounded-full w-20 h-20") %>
          </div>
          <div class="p-2 md:w-2/3 ">
            <div class="flex mt-2">
              <span class="container w-1 mr-2 rounded-lg bg-amber-400"></span>
              <div class="flex-grow"> 
                <%= link_to "#{matching.company.name}", company_show_path(matching.company.id), class: "font-semibold text-gray-500 hover:text-gray-400 sm:py-6" %>
                <%= content_tag :div, matching.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d %I:%M %p"), class: "text-sm" %>
              </div>
            </div>
            <div class="mt-2">
              <%= link_to job_show_path(matching.job.id) do %>
                <%= content_tag :div, matching.job.title, class: "font-semibold ml-3" %>
                <%= content_tag :div, truncate(matching.job.content, length: 200), class: "text-md ml-3" %>
              <% end %>
            </div>
          </div>
          <div class="pt-4 md:w-1/3">
            <div>需求人數: <%= matching.job.num_of_people %></div>
            <div>年資: <%= matching.job.seniority %></div>
            <div>薪水: <%= matching.job.salary %></div>
            <div>地址: <%= matching.company.address %></div>
          </div>
        </li>
      </div>
      <div class="container p-10 mx-auto input">
        <h1 class="p-2 font-semibold text-black rounded-lg text-md">面試通知</h1>
        <% if matching.notified == true %>
          <ul role="list" class="divide-y divide-gray-100">
            <li class="flex flex-col-reverse py-5 gap-x-4 sm:flex-row sm:justify-between">
              <div class="flex flex-col min-w-0 sm:flex-row sm:items-center gap-x-4">
                <%= image_tag("Read.png", class: "rounded-full w-10 h-10") %>
                <div class="flex-auto min-w-0">
                  <p class="text-sm font-semibold leading-6 text-gray-900"><%= matching.interview_date %>  <%= matching.interview_time.in_time_zone("Taipei").strftime("%I:%M %p") %></p>
                  <p class="mt-1 text-sm leading-5 text-gray-500"><%= matching.interview_message %></p>
                </div>
                <div class="shrink-0 sm:flex sm:flex-col">
                  <p class="text-sm leading-6 text-gray-900"><%= matching.company.name %></p>
                  <p class="mt-1 text-sm leading-5 text-gray-500">地址: <%= matching.company.address %></p>
                </div>
              </div>
            </li>
          </ul>
        <% else %>
          <p class="m-2 font-semibold">目前沒有任何面試通知。</p>
        <% end %>
      </div>
    </ul>
    <hr>    
  </div>
<% end %>
